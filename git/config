[user]
    name = Sheheryar Parvaz
    email = me@cherryman.org

[fetch]
    parallel = 0

[pull]
	ff = only

[push]
	recurseSubmodules = check
	autoSetupRemote = true

[init]
    defaultBranch = master

[rerere]
	enabled = true

[submodule]
	recurse = true

[branch]
	sort = -committerdate

[column]
	ui = auto

[pager]
    branch = false

[sendemail]
	smtpuser = me@cherryman.org
	smtpencryption = tls
	smtpserver = smtp.mailbox.org
	smtpserverport = 587

[alias]
    a = add
    c = commit
    d = diff
    l = log
    p = pull
    s = status --short
    b = branch
    rb = rebase
    rs = restore
    sw = switch
    cl = clone

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
